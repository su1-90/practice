<%= stylesheet_link_tag 'style', 'tasks_index', medis: 'all', 'data-turbolinks-track': 'reload'%>

<div class="index_container">
  <h1>Tasks</h1>
  <div>
    <% @tasks.each do |task| %>
      <ul>
        <li><span class="dan">Content: <%= task.content %></li>
        <li><span class="dan2"><%= link_to "Edit", edit_task_path(task) %></li>
        <li><span class="dan2"><%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></li>
      </ul>
    <% end %>
  </div>

  <%= link_to "New task", new_task_path %>
  <%= link_to "Back to users", users_path %>
</div>